<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Stack Question</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/jquery-ui/themes/base/all.css" />
    <link rel="stylesheet" href="~/css/site.css"/>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/lib/jquery-ui/ui/autocomplete.js"></script>
    <script src="~/lib/tinymce/js/tinymce/tinymce.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/app.js"></script>
</head>
<body>
    <div class="navbar navbar-static-top navbar-inverse">
        <div class="container">
            @await Html.PartialAsync("_LoginPartial")
        </div>
    </div>
    <div class="container">
        <div class="pull-right">
            <a asp-controller="Question" asp-action="List" class="btn btn-navigation">Questions</a>
            <a class="btn btn-navigation">Tags</a>
            <a class="btn btn-navigation">Users</a>
            <a asp-controller="Question" asp-action="Add" class="btn btn-navigation">Ask Question</a>
        </div>
        <br />
        @RenderBody()
    </div>
    <br />
</body>
</html>