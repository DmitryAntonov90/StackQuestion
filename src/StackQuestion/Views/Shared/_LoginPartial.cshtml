@using System.Security.Claims

@if (User.IsSignedIn())
{
    <form asp-controller="Account" asp-action="LogOut" method="post">
        <ul class="nav navbar-nav navbar-right">
            <li><a asp-controller="Manage" asp-action="Profile">Hello, @User.GetUserName()</a></li>
            <li><input type="submit" class="btn btn-link navbar-btn navbar-link" value="Log out" /></li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-controller="Account" asp-action="Register">Sign Up</a></li>
        <li><a asp-controller="Account" asp-action="Login">Log In</a></li>
    </ul>
}
